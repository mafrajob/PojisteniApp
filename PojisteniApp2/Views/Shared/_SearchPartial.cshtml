<form asp-action="Index" method="get">
    <div class="form-actions">
        <div>
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" placeholder="Jméno nebo příjmení" class="mb-1" />
            <button type="submit" class="btn btn-sm btn-outline-secondary mb-1"><i class="fa-solid fa-magnifying-glass"></i></button>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary mb-1"><i class="fa-solid fa-xmark"></i></a>
        </div>
    </div>
</form>