@model PojisteniApp2.Models.Person

@{
    ViewData["Title"] = "Editace pojištěnce";
}

<form asp-action="Edit" enctype="multipart/form-data">
	<div class="row">
		<div class="col-12 col-md-auto">
			<h1 class="text-center text-md-start">@ViewData["Title"]</h1>
			<input type="hidden" asp-for="PersonId" />
			<div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
			<div class="form-group d-flex justify-content-center justify-content-md-start mt-3">
				<img src="@ViewBag.ImageDataUrl" id="profile-img" class="img-thumbnail img-profile" />
			</div>
			<div class="form-group mt-1">
				<input type="file" accept="image/*" id="choose-img" asp-for="ImageData" class="form-control-file" />
				<input type="hidden" id="max-size-img" value="@ViewBag.ImageMaxSize" />
				<span asp-validation-for="ImageData" id="validation-text-img" class="text-danger"></span>
			</div>
		</div>
		<div class="col-12 col-md">
			<div class="form-group mt-1 mt-md-5">
				<label asp-for="FirstName" class="control-label"></label>
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="form-group mt-1">
				<label asp-for="LastName" class="control-label"></label>
				<input asp-for="LastName" class="form-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="form-group mt-1">
				<label asp-for="Email" class="control-label"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group mt-1">
				<label asp-for="Phone" class="control-label"></label>
				<input asp-for="Phone" class="form-control" />
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
		</div>
		<div class="col-12 col-md">
			<div class="form-group mt-1 mt-md-5">
				<label asp-for="Street" class="control-label"></label>
				<input asp-for="Street" class="form-control" />
				<span asp-validation-for="Street" class="text-danger"></span>
			</div>
			<div class="form-group mt-1">
				<label asp-for="PostalCode" class="control-label"></label>
				<input asp-for="PostalCode" class="form-control" />
				<span asp-validation-for="PostalCode" class="text-danger"></span>
			</div>
			<div class="form-group mt-1">
				<label asp-for="City" class="control-label"></label>
				<input asp-for="City" class="form-control" />
				<span asp-validation-for="City" class="text-danger"></span>
			</div>
			<div class="form-group text-center text-md-end mt-4">
				<input type="submit" value="Uložit" class="btn btn-primary" />
			</div>
		</div>	
	</div>
</form>

@* Image preview and size validation script *@
<script src="~/js/person-image.js" asp-append-version="true"></script>