@using PojisteniApp2.Helpers;

@model PaginatedList<PojisteniApp2.Models.Person>

@{
    ViewData["Title"] = "Pojištěnci";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nový pojištěnec</a>
</p>

<partial name="_SearchPartial" />

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Celé jméno</a>
            </th>
            <th>
                Bydliště
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.PersonId">@Html.DisplayFor(modelItem => item.FullName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.PersonId">Editovat</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.PersonId">Odstranit</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_PaginationPartial" />