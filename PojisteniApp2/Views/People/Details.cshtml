@model PojisteniApp2.Models.Person

@{
    ViewData["Title"] = "Detail pojištěnce";
}

<div>
    <dl class="row">
        <div class="col col-sm-3 col-lg-2">
            <dd>
                <img src="@ViewBag.ImageDataUrl" class="img-thumbnail" />
            </dd>
        </div>
        <div class="col">
            <dd>
                <h3>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>
            </dd>
            <dd>
                @Html.DisplayFor(model => model.Street)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.PostalCode)  @Html.DisplayFor(model => model.City)
            </dd>
            <dd class="mt-3">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>
        </div>
    </dl>
</div>

@if (Model.Insurances.Count > 0)
{
    <h3 class="mt-3 mt-sm-4">Sjednaná pojištění</h3>
    <table class="table tm-2 mt-sm-3">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Insurances[0].InsuranceId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Insurances[0].InsuranceType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Insurances[0].InsuranceAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Insurances[0].ValidFrom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Insurances[0].ValidTo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Insurances)
            {
                <tr>
                    <td>
                        <a asp-controller="Insurances" asp-action="Details" asp-route-id="@item.InsuranceId">@Html.DisplayFor(modelItem => item.InsuranceId)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InsuranceType.InsuranceTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InsuranceAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValidFrom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValidTo)
                    </td>
                    <td class="text-end">
                        <a class="btn btn-warning mb-1" asp-controller="Insurances" asp-action="Edit" asp-route-id="@item.InsuranceId">Editovat</a>
                        <a class="btn btn-danger mb-1" asp-controller="Insurances" asp-action="Delete" asp-route-id="@item.InsuranceId">Odstranit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="row">
    <div class="col">
        <a asp-controller="Insurances" asp-action="Create" asp-route-id="@Model?.PersonId" class="btn btn-primary">Přidat pojištění</a>
    </div>
    <div class="col d-flex justify-content-end">
        <a asp-action="Edit" class="btn btn-warning mb-1" asp-route-id="@Model?.PersonId">Editovat pojištěnce</a>
        <a asp-action="Delete" class="btn btn-danger mb-1 ms-1" asp-route-id="@Model?.PersonId">Odstranit pojištěnce</a>
    </div>
</div>