@{
    ViewData["Title"] = "Domovská stránka";
}

<div id="home-carousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#home-carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Obrázek pojištěnci"></button>
        <button type="button" data-bs-target="#home-carousel" data-bs-slide-to="1" aria-label="Obrázek pojištění"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100 img-fluid rounded-3" src="~/images/img-insured-person.jpg" alt="Pojištěnci">
            <div class="container">
                <div class="carousel-caption bg-dark bg-opacity-50 rounded-3">
                    <h1>Naši pojištěnci</h1>
                    <p class="lead">Dobrá práce, evidujeme již 15 pojištěnců. S takovou budeme brzy největší pojišťovna v Evropě!</p>
                    <p><a class="btn btn-lg btn-primary" href="#">Přidat pojištěnce</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 img-fluid rounded-3" src="~/images/img-insurance.jpg" alt="Pojištění">
            <div class="container">
                <div class="carousel-caption bg-dark bg-opacity-50 rounded-3">
                    <h1>Prodaná pojištění</h1>
                    <p class="lead">Uzavřeli jsme již 42 pojištění. Nejvyšší limit plnění je 15 000 Kč, dokážeš ho překonat?</p>
                    <p><a class="btn btn-lg btn-primary" href="#">Uzavřít pojištění</a></p>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#home-carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Předchozí</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#home-carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Další</span>
    </button>
</div>