@model IEnumerable<PojisteniApp2.Models.Insurance>

@{
    ViewData["Title"] = "Pojištění";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nové pojištění</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InsuranceId)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PersonSortParm"]">@Html.DisplayNameFor(model => model.Person)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsuranceType)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AmountSortParm"]">@Html.DisplayNameFor(model => model.InsuranceAmount)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ValidFromSortParm"]">@Html.DisplayNameFor(model => model.ValidFrom)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ValidToSortParm"]">@Html.DisplayNameFor(model => model.ValidTo)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.InsuranceId">@Html.DisplayFor(modelItem => item.InsuranceId)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.FullNameWithAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsuranceType.InsuranceTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsuranceAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValidFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValidTo)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.InsuranceId">Editovat</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.InsuranceId">Odstranit</a>
            </td>
        </tr>
}
    </tbody>
</table>
