@model PojisteniApp2.Models.Insurance

@{
    ViewData["Title"] = "Nové pojištění";
}

<form asp-action="Create">
	<div class="row bg-dark bg-opacity-50 py-3 ps-4 pe-2 d-flex">
		<div class="col-auto text-white d-flex align-items-center">
            <h1>@ViewData["CustomTitle"]</h1>
		</div>
		<div class="col text-end d-flex align-items-center justify-content-end">
			<button type="submit" class="btn btn-lg btn-primary"><i class="fa-solid fa-check"></i></button>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		</div>
	</div>
	<div class="row bg-light pt-2 pb-4 py-lg-4 px-3 px-md-5 mt-1">
        <div class="col-12 col-md-6 col-lg-5 col-xl-4">
            <div class="form-group mt-1">
                <label asp-for="InsuranceType" class="control-label"></label>
                <select asp-for="InsuranceTypeId" class="form-control" asp-items="ViewBag.InsuranceTypeId"></select>
            </div>
            <div class="form-group mt-1">
                <label asp-for="InsuranceAmount" class="control-label"></label>
                <input asp-for="InsuranceAmount" class="form-control" />
                <span asp-validation-for="InsuranceAmount" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="InsuranceSubject" class="control-label"></label>
                <input asp-for="InsuranceSubject" class="form-control" />
                <span asp-validation-for="InsuranceSubject" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-5 col-xl-4">
            <div class="form-group mt-1">
                <label asp-for="ValidFrom" class="control-label"></label>
                <input asp-for="ValidFrom" class="form-control" />
                <span asp-validation-for="ValidFrom" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="ValidTo" class="control-label"></label>
                <input asp-for="ValidTo" class="form-control" />
                <span asp-validation-for="ValidTo" class="text-danger"></span>
            </div>
            <div @if (ViewBag.IsDefinedPerson)
            {
                <text>style = "display: none"</text>
            }
            class="form-group mt-1">
                <label asp-for="Person" class="control-label"></label>
                <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
            </div>
        </div>
	</div>
</form>